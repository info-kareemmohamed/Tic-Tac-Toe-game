<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TicTacToegame" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TicTacToegame" parent="Base.Theme.TicTacToegame" />

    <style name="TicTacImage">
        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:background">@drawable/round_back_dark</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">@dimen/_20sdp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
    </style>

    <style name="Button_Home">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_back_blue1000</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/_15sdp</item>
    </style>

</resources>