<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    tools:context=".ui.TicTacToe">


    <androidx.cardview.widget.CardView
        android:id="@+id/TicTac_Card_X"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:backgroundTint="@color/dark_blue"
        android:padding="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/TicTac_LinearLayout_X"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_back_border"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/TicTac_Name_X"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_1sdp"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/TicTac_Score_X"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_1sdp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/close" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/TicTac_Card_O"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:backgroundTint="@color/dark_blue"
        android:padding="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/TicTac_LinearLayout_O"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_back_dark"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/TicTac_Name_O"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_1sdp"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/TicTac_Score_O"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_1sdp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/zero" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <GridLayout
        android:id="@+id/TicTac_GridLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_350sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:background="@drawable/round_back_purple"
        android:columnCount="3"
        android:padding="@dimen/_10sdp"
        android:rowCount="3">

        <ImageView
            android:id="@+id/TicTac_Image_1"
            style="@style/TicTacImage"
           android:background="@drawable/round_back_border"
            android:tag="1" />

        <ImageView
            android:id="@+id/TicTac_Image_2"
            style="@style/TicTacImage"
            android:tag="2"

            />

        <ImageView
            android:id="@+id/TicTac_Image_3"
            style="@style/TicTacImage"
            android:tag="3"

            />

        <ImageView
            android:id="@+id/TicTac_Image_4"
            style="@style/TicTacImage"
            android:tag="4" />

        <ImageView
            android:id="@+id/TicTac_Image_5"
            style="@style/TicTacImage"
            android:tag="5" />

        <ImageView
            android:id="@+id/TicTac_Image_6"
            style="@style/TicTacImage"
            android:tag="6" />

        <ImageView
            android:id="@+id/TicTac_Image_7"
            style="@style/TicTacImage"
            android:tag="7" />

        <ImageView
            android:id="@+id/TicTac_Image_8"
            style="@style/TicTacImage"
            android:tag="8" />

        <ImageView
            android:id="@+id/TicTac_Image_9"
            style="@style/TicTacImage"
            android:tag="9" />

    </GridLayout>


</RelativeLayout>